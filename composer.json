{
    "name": "yiisoft/form",
    "type": "library",
    "description": "The package helps with implementing data entry forms.",
    "keywords": [
        "yii",
        "form"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/form/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "chat": "https://t.me/yii3en",
        "source": "https://github.com/yiisoft/form"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "yiisoft/friendly-exception": "^1.0",
        "yiisoft/html": "^3.0",
        "yiisoft/http": "^1.2",
        "yiisoft/strings": "^2.0",
        "yiisoft/validator": "dev-master",
        "yiisoft/widget": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.18",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.23",
        "yiisoft/test-support": " ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Form\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Form\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "bootstrap": "bootstrap.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
